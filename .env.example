# .env.example - Copy to .env and fill in your values

# Core API Configuration
ENV=production
HOST=0.0.0.0
PORT=8000

# AI Remediation
GROQ_API_KEY=your_groq_api_key_here

# Optional: Redis for job queuing and caching
REDIS_URL=redis://localhost:6379

# Optional: Database for persistence
DATABASE_URL=postgresql://user:password@localhost:5432/vuln_scanner

# Optional: Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Optional: Security settings
SECRET_KEY=your_secret_key_for_jwt_etc
ALLOWED_ORIGINS=https://yourdomain.com,https://anotherdomain.com

# Optional: Monitoring
PROMETHEUS_ENABLED=false
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# GitHub integration (for direct repo scanning)
GITHUB_TOKEN=your_github_personal_access_token

# Optional: File storage
UPLOAD_MAX_SIZE=50MB
TEMP_DIR=/tmp/vuln_scanner
RESULTS_RETENTION_DAYS=30